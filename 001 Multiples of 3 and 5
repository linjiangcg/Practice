//method 1
#include <stdio.h>

int main()
{
  int i, sum = 0;
	for (i = 3; i < 1000; i++)
	{
		if (i % 3 == 0 || i % 5 == 0)
		{
			sum += i;
		}
	}
	printf("%d", sum);
	printf("\n");
	return 0;
}




//method 2
#include <stdio.h>

int main() 
{
	int i = 1, a = 0;
	int j = 1, b = 0;
	int k = 1, c = 0;
	int sum;

	for (; i <= 333; i++)
	{
		a += i;
	}
	for (; j <= 199; j++)
	{
		b += j;
	}
	for (; k <= 66; k++)
	{
		c += k;
	}

	sum = 3 * a + 5 * b - 15 * c;
	printf("%d", sum);
	printf("\n");
}
	


